{
  "image": "ghcr.io/pranavmishra90/facsimilab-full:latest",
  "containerUser": "coder",
  "mounts": [
      "source=${localEnv:HOME}${localEnv:USERPROFILE},target=/home/coder,type=bind,consistency=cached",
      "source=${localWorkspaceFolder},target=/home/coder/work,type=bind,consistency=cached"
  ],
  "updateRemoteUserUID": true,
  "forwardPorts": [3000, 3333, 9119],
  "postCreateCommand": ["/bin/bash"],

  "customizations": {
      "vscode": {
          "extensions": [
              "quarto.quarto",
              "eamodio.gitlens",
              "ms-azuretools.vscode-docker",
              "ms-python.debugpy",
              "ms-python.python",
              "ms-python.vscode-pylance",
              "ms-toolsai.jupyter",
              "ms-toolsai.jupyter-keymap",
              "ms-toolsai.jupyter-renderers",
              "ms-toolsai.vscode-jupyter-cell-tags",
              "ms-toolsai.vscode-jupyter-slideshow",
              "ritwickdey.LiveServer",
              "ms-vsliveshare.vsliveshare"
          ]
      }
  }
}
